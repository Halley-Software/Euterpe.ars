---
import HeaderListComponent from "./HeaderListComponent.astro";

import Home from "./svgs/astro/HomeIcon.astro"
import Songs from "./svgs/astro/SongIcon.astro"
import Playlists from "./svgs/astro/PlaylistIcon.astro"
import Artists from "./svgs/astro/ArtistIcon.astro"
---

<header class="flex flex-col gap-5">
  <nav class="bg-[#242424] p-6 rounded-xl">
    <ul class="flex flex-col gap-3 list-none">
      <HeaderListComponent path="/" content="Inicio">
        <Home />
      </HeaderListComponent>
      <HeaderListComponent path="/songs" content="Canciones">
        <Songs />
      </HeaderListComponent>
      <HeaderListComponent path="/playlists" content="Listas">
        <Playlists />
      </HeaderListComponent>
      <HeaderListComponent path="/artists" content="Artistas">
        <Artists />
      </HeaderListComponent>
    </ul>
  </nav>
</header>
