---
import Aside from '@components/Aside.astro'
import Header from '@components/Header.astro'
import DialogForm from '@components/DialogForm.astro'
import Player from '@components/core/Player'
import ViewTransitions from 'astro/components/ViewTransitions.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Web flavour of Euterpe.ars" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/ico" href="/favicon.jpg" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<div id="all" class="flex flex-col h-[100vh] resize-none gap-4">
			<div class="flex flex-row gap-5 h-[90vh] p-[2vh]">
				<div class="flex flex-col md:w-[30vh] gap-5">
					<Header />
					<Aside />
				</div>
				<main class="bg-[#242424] rounded-xl flex-1">
					<slot />
				</main>
			</div>
			<Player client:load transition:persist />
		</div>

		<dialog open={false} class="p-20 rounded-xl text-white bg-[#242424]" transition:persist> <!-- Must persist because the open button will lose the event on every transition -->
			<DialogForm />
		</dialog>
	</body>
</html>
<style>
	:root {
		background-color: black;
		color: white;
	}
</style>
<script>
	const dialog = document.querySelector("dialog")

	dialog?.addEventListener("click", () => {
		dialog.showModal()
	})
</script>